<h1>Listing facilities</h1>

<table>
  <thead>
    <tr>
      <th>Client</th>
      <th>Name</th>
      <th>Address</th>
      <th>Phone</th>
      <th>Poc name</th>
      <th>Poc phone</th>
      <th>Poc email</th>
      <th>Inactive</th>
      <th>Comments</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @facilities.each do |facility| %>
      <tr>
        <td><%= facility.client_id %></td>
        <td><%= facility.name %></td>
        <td><%= facility.address %></td>
        <td><%= facility.phone %></td>
        <td><%= facility.poc_name %></td>
        <td><%= facility.poc_phone %></td>
        <td><%= facility.poc_email %></td>
        <td><%= facility.inactive %></td>
        <td><%= facility.comments %></td>
        <td><%= link_to 'Show', facility %></td>
        <td><%= link_to 'Edit', edit_facility_path(facility) %></td>
        <td><%= link_to 'Destroy', facility, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

