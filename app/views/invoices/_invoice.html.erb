<tr<%= " class=danger" if invoice.date_paid.blank? %>>
  <td><%= invoice.number %></td>
  <td><%= invoice.date_invoiced %></td>
  <td><%= invoice.client.name %></td>
  <td><%= invoice.description %></td>
  <td><%= number_to_currency(invoice.amount) %></td>
  <td><%= invoice.date_paid %></td>
  <td>
    <%= link_to "<span class='fa fa-edit'></span>".html_safe, edit_invoice_path(invoice), class: "btn btn-warning btn-xs", title: "Edit Invoice Information", data: { toggle: "modal", load_remote: edit_invoice_path(invoice) } %>
    <%= link_to "<span class='fa fa-trash-o'></span>".html_safe, invoice, method: :delete, class: "btn btn-danger btn-xs", title: "Delete Invoice", data: { confirm: 'Are you sure you want to delete this invoice?' } %></td>
</tr>
