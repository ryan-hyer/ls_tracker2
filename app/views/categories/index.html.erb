<div class="panel panel-primary">
  <div class="panel-heading">
    <%= link_to "<span class='glyphicon glyphicon-list'></span> Manage Scheme Master List".html_safe, schemes_path, class: "btn btn-warning btn-xs pull-right" %>
    <%= link_to "<span class='glyphicon glyphicon-list'></span> Manage Standard Master List".html_safe, standards_path, class: "btn btn-warning btn-xs pull-right" %>
    <%= link_to "<span class='glyphicon glyphicon-plus'></span> New".html_safe, new_category_path, class: "btn btn-success btn-xs pull-right", title: "Add New Category", data: { toggle: "modal", load_remote: new_category_path } %>
    Listing Categories
  </div>
  <table class="table table-striped table-condensed">
    <thead>
      <tr>
        <th>Scheme</td>
        <th>Category</th>
        <th>Available Standards</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @categories.each do |category| %>
        <tr>
          <td><%= category.scheme.name %></td>
          <td><%= category.description %></td>
          <td>
            <ul class="list-unstyled">
              <% category.standards.each do |standard| %>
                <li><%= standard.number_with_exceptions %></li>
              <% end %>
            </ul>
          </td>
          <td>
            <%= link_to "<span class='glyphicon glyphicon-pencil'></span>".html_safe, edit_category_path(category), class: "btn btn-warning btn-xs", title: "Edit Category Information", data: { toggle: "modal", load_remote: edit_category_path(category) } %>
            <% if true %>
              <%= link_to "<span class='glyphicon glyphicon-trash'></span>".html_safe, category, method: :delete, class: "btn btn-danger btn-xs", title: "Delete Category", data: { confirm: 'Are you sure you want to delete this category?' } %>
            <% else %>
              <button type="button" class="btn btn-default btn-xs" data-toggle="tooltip" data-placement="left" title="Category is still in use and cannot be deleted. Remove category from all clients before deleting."><span class='glyphicon glyphicon-trash'></span></button>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<%= render 'shared/modal' %>