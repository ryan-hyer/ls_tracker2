<% object.each do |facility| %>
  <div class="row">
    <div class="col-md-3">
      <%= link_to "<span class='glyphicon glyphicon-pencil'></span> Edit".html_safe, edit_facility_path(facility), class: "btn btn-xs btn-warning", title: "Edit Facility Information", data: { toggle: "modal", load_remote: edit_facility_path(facility) } %><br/>
      <%= "<strong>#{facility.name}</strong><br/>".html_safe unless facility.name.blank? %>
      <%= simple_format(facility.address, {}, wrapper_tag: "div") %>
      Tel: <%= facility.phone %>
    </div>
    <div class="col-md-3">
      <strong>Point of Contact</strong><br />
      <%= facility.poc_name %><%= ", #{facility.poc_phone}".html_safe unless facility.poc_phone.blank? %><%= ", #{mail_to(facility.poc_email)}".html_safe unless facility.poc_email.blank? %><br/><br/>
      <strong>Comments</strong><br />
      <%= simple_format(facility.comments, {}, wrapper_tag: "div") %>
    </div>
    <div class="col-md-6 inspections">
      <strong>Inspection History</strong>
      <table class="table table-striped table-condensed">
        <thead>
          <tr>
            <th>Date</th>
            <th>IS #</th>
            <th>Comments</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td>3/12/2012</td>
            <td>IS00315</td>
            <td>Passed - No issues</td>
          </tr>
          <tr>
            <td>3/12/2011</td>
            <td>IS00315</td>
            <td>No posted quality statement<br/>
              Discrepancy letter sent 03/15/2011<br/>
              Reply received 04/02/2011<br/>
              Resolution satisfactory</td>
          </tr>
          <tr>
            <td>3/12/2010</td>
            <td>IS00315</td>
            <td>Passed - No issues</td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
<% end %>
