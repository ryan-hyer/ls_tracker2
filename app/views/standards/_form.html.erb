<%= form_for(@standard) do |f| %>
  <% if @standard.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@standard.errors.count, "error") %> prohibited this standard from being saved:</h2>

      <ul>
      <% @standard.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :number, "Standard Org and Number (i.e. ASTM 1234)" %><br>
    <%= f.text_field :number, required: true %>
  </div>
  <div class="field">
    <%= f.label :revision, "Current Revision" %><br>
    <%= f.text_field :revision %>
  </div>
  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>
  <div class="actions">
    <%= f.submit "Submit", class: "btn btn-primary" %>
    <button type="button" class="btn btn-danger" data-dismiss="modal">Cancel</button>
  </div>
<% end %>
