<h1>
  <%= link_to "<span class='glyphicon glyphicon-list'></span> Manage Standard Master List".html_safe, standards_path, class: "btn btn-warning btn-sm pull-right" %>
  <%= link_to "<span class='glyphicon glyphicon-plus'></span> Add New Category".html_safe, new_category_path, class: "btn btn-success btn-sm pull-right", title: "Add New Category", data: { toggle: "modal", load_remote: new_category_path } %>
  Listing Categories/Standards</h1>

<table class="table table-striped table-condensed">
  <thead>
    <tr>
      <th>Listing Category</th>
      <th>Available Standards</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= category.description %></td>
        <td>
          <% category.standards.each do |standard| %>
            <%= standard.number_with_exceptions %>
          <% end %>
        </td>
        <td><%= link_to "<span class='glyphicon glyphicon-pencil'></span>".html_safe, edit_category_path(category), class: "btn btn-warning btn-xs", title: "Edit Category Information", data: { toggle: "modal", load_remote: edit_category_path(category) } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= render 'shared/modal' %>