<div class="panel panel-primary">
  <div class="panel-heading">
	  <%= link_to "<span class='glyphicon glyphicon-plus'></span> Add New User".html_safe, new_user_path, class: "btn btn-success btn-sm pull-right", title: "Add New User", data: { toggle: "modal", load_remote: new_user_path } %>
  	Manage Users
  </div>
  <div class="panel-body">
		<ul class="list-unstyled">
		  <% @users.each do |user| %>
		    <li>
		    	<%= user.email %>
		    	<% if user == current_user %>
            <button type="button" class="btn btn-default btn-xs" data-toggle="tooltip" data-placement="right" title="You can't delete yourself!"><span class='glyphicon glyphicon-trash'></span></button>
          <% else %>
		    		<%= link_to "<span class='glyphicon glyphicon-trash'></span>".html_safe, user, method: :delete, class: "btn btn-danger btn-xs", title: "Delete User", data: { confirm: 'Are you sure you want to delete this user?' } %>
		    	<% end %>
				</li>
		  <% end %>
		</ul>
	</div>
</div>